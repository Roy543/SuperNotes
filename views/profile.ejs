<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Profile</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <style>
        body {
            background-color: #f7f8fa;
            font-family: 'Arial', sans-serif;
            padding-top: 100px;
        }

        .navbar-brand {
            font-weight: 700;
            font-size: 24px;
            color: white !important;
        }

        .navbar {
            background-color: #2C3E50 !important; /* Darker shade for navbar */
        }

        .container {
            max-width: 1100px;
            margin-top: 20px;
        }

        h2 {
            color: #333;
            font-weight: 600;
            border-bottom: 1px solid #e5e5e5;
            padding-bottom: 15px;
            margin-bottom: 20px;
            margin-top: 0; 
        }

        .card {
            border-radius: 15px; /* More rounded corners */
            padding: 20px;
            transition: 0.3s ease-in-out;
            background-color: #fff;
        }

        .card:hover {
            transform: translateY(-5px);
            box-shadow: 0px 4px 30px rgba(0, 0, 0, 0.1);
        }

        .btn-danger, .btn-danger:hover {
            background-color: #f54242 !important;
            border-color: #f54242;
        }

        .btn-primary, .btn-primary:hover {
            background-color: #007bff !important;
            border-color: #007bff;
        }

        .btn, .btn:hover {
            border-radius: 50px !important;
        }

        .nav-link.dropdown-toggle {
            color: white !important;
        }

        /* Adjusting for fixed navbar */
        .navbar.fixed-top {
            top: 0;
            z-index: 1030;
        }
    </style>
</head>

<body>
    <nav class="navbar navbar-expand-lg fixed-top">
        <a class="navbar-brand" href="#">SuperNotes</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown"
            aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNavDropdown">
            <form class="form-inline ml-auto" action="/search-notes" method="GET">
                <a class="btn btn-info mr-2" href="newnote.html">New Note</a>
                <input class="form-control mr-sm-2" type="search" name="query" placeholder="Search" aria-label="Search">
                <button class="btn btn-outline-light my-2 my-sm-0 mr-2" type="submit">Search</button>
                <a class="btn btn-secondary mr-2" href="facesearch">Face Search</a>
            </form>
            <ul class="navbar-nav ml-auto">
                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownMenuLink" role="button"
                        data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        <%= user.username %>
                    </a>
                    <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdownMenuLink">
                        <button class="dropdown-item" id="logout-button">Logout</button>
                    </div>
                </li>
            </ul>
        </div>
    </nav>

    <div class="container">
        <h2>Your Notes</h2>
        <a href="/profile" class="btn btn-outline-info mb-3 float-right">Show All Notes</a>
        <div class="clearfix"></div>
        <div class="row justify-content-center">
            <% notes.forEach(function(note) { %>
                <div class="col-md-6 mb-4">
                    <div class="card shadow">
                        <div class="card-body">
                            <div class="d-flex justify-content-between align-items-start">
                                <h3 class="card-title">
                                    <%= note.personName %>
                                </h3>
                                <button class="btn btn-danger btn-sm delete-note"
                                    data-note-id="<%= note._id %>">Delete</button>
                            </div>
                            <h4 class="card-title mt-2">
                                <%= note.noteTopic %>
                            </h4>
                            <p class="card-text">
                                <%- note.noteText %>
                            </p>
                            <a href="/update-note/<%= note._id %>" class="btn btn-primary btn-sm mt-2">Update</a>
                        </div>
                    </div>
                </div>
                <% }); %>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <script src="/scripts/profile.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/webcamjs/1.0.25/webcam.min.js"></script>
</body>

</html>
